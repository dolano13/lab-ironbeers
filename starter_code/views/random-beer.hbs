
<div class="randomAll">
<div class="randompic">
  <img src="{{this.image_url}}" style="width:55px; vertical-align:top;">
  </div>
  <div class="randominfo">
  <h4>{{this.name}}</h4>
  <h6 class="beer-tagline">{{this.tagline}}</h6>
  <p>{{this.description}}</p>
  <strong>Food Pairing:</strong>
    <ul>
      {{#each food_pairing}}
    <li>
      <p>{{this}}</p>
      </li>
      {{/each}}
    </ul>
  <strong>Brewer's Tips</strong> 
  <p>{{this.brewers_tips}} </p>
  </div>
</div>